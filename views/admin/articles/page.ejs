<%- include('../../partials/head')%>

<body>
   <%- include('../../partials/navbarHome')%>

   <div class="container ">
      <hr>
      <% results.articles.rows.forEach((article)=>{%>

      <div class="card mrg-top">
         <div class="card-header">
            <%= article.title%>
         </div>
         <div class="card-body">
            <a href="/<%= article.slug%>" class="btn btn-success">Ler artigo</a>
         </div>
      </div>

      <%})%>
      
      <div class="row">
        <div class="col col-12">

                <% if( results.num >2){ %>
                    <a style="float: left;" href="/articles/page/<%= results.num - 1 %>" ><<< prev</a>
                
                <%} else if(results.num == 2 ){ %>
                    <a style="float: left;" href="/"><< prev</a>
                <% }%>
                



            <% if( results.next) {%>
           <a style="float: right;" href="/articles/page/<%= results.num + 1  %>" >Next >>></a>
           <%}%>
        </div>
        <hr>
     </div>
     <hr>

   </div>
   
</body>
<%- include('../../partials/footer')%>
