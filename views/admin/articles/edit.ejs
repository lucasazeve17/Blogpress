<%- include('../../partials/head')%>

<body>
    <%- include('../../partials/navbar')%>

    <div class="container">
        <hr>
        <div class="card">
            <div class="card-header">
                <h2>Edição de artigo</h2>
            </div>
            <div class="card-body">
                <form action="/articles/update?_method=PUT" method="POST">
                    <input class="form-control mrg-bottom" type="text" name="title"
                        placeholder="Defina o título da categoria" value="<%= article.title%>">
                    <textarea class="form-control" placeholder="Escreva o artigo aqui" name="body"
                        id="article"><%= article.body %></textarea>
                    <label>Cattegoria</label>
                    <select name="category" class="form-control">
                        <% categories.forEach(category=>{ %>
                        <% if(category.id == article.categoryId) {%>
                        <option value="<%= category.id%>" selected><%= category.title%></option>
                        <%} else{%>
                        <option value="<%= category.id%>" ><%= category.title%></option>
                        <%}%>    
                        <%})%>
                    </select>


                    <button class="btn btn-success mrg-top" type="submit">Atualizar</button>
                    <input type="hidden" name="id" value="<%= article.id%>">
                </form>
            </div>
        </div>
    </div>
</body>

<%- include('../../partials/footer')%>

<script src="/tinymce/tinymce.min.js"></script>
<script>

    tinymce.init({
        selector: '#article',
        language: 'pt_BR',
        plugins: [
            'advlist autolink link image  print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons'
        ]
    })

</script>